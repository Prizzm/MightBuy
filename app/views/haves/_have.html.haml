%li{id: "topic-list-entry-#{have.id}"}
  .row
    .span2.item-list-image.p-rel
      = image_tag(have.thumbnail_image, :alt => have.subject)
      = link_to("", have_path(have), :class =>"mask-140")
    .span7.pull-right
      .row
        .span5
          .topic-title
            = link_to(have.subject.capitalize, have_path(have))
          .topic-url
            = link_to(have.short_url, "#{have.url}", :target=>"_blank")
          .topic-listing-tag
            %i.icon-tags
            tags:
            = tag_links(have)
          .topic-meta
            %span
              You added this #{time_ago_in_words(have.created_at)} ago
        .span1.pull-right.topic-list-actions
          %a.topic-actions{:href => have_path(have),
            'data-method' => :delete,
            'data-confirm' => "Are you sure, you want to delete this item?"}
            \&nbsp;
          .clear
          %div.price
            = number_to_currency(have.price)
          .clear
        .clear
        %br
        .span7.dotted-border.ptop10.pbot10
          .row
            .span2.ptop3
              .pull-left.mright10.color-brown Share
              = render partial: "shares/list_view_social_links", locals: { topic: have }
              .clear
            %div{id: "topic-recommend-list-#{have.id}"}
              = render partial: "haves/topic_recommend_on_list", locals: { topic: have }
            .span1.pagination-right.raquo
              = link_to("more   ", have_path(have)) 
    .clear
