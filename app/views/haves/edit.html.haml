= javascript_tag "Mightbuy.initialTags = #{@topic.tag_array}"
%div#details
  .row
    .span5
      .topic-form-wrapper
        = simple_form_for @topic, html: { multipart: true } do |form|
          = render partial: "form", locals: { :form => form }
          = form.input :image, as: :file, wrapper_html: { class: "hide" }
          = form.hidden_field :retained_image
          .buttons.btn-red-large.w115
            = form.button :submit, "Save"
    #topic_right_panel.span5
      #gsearch-results.hide
      #item-form-image-selector
      #choose-image
        %button.btn.btn-red.btn-large Choose Picture
    .clear