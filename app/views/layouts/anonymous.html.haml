!!!
%html
  %head
    = yield :head

    = render partial: 'partials/meta', locals: { topic: @topic }
    = csrf_meta_tags

    = stylesheet_link_tag "website", :media => "all"
    = javascript_include_tag "website"

    = render partial: "partials/uservoice"

    %title= "MightBuy - #{content_for(:title).empty? ? mightbuy_tag_line : content_for(:title)}"
  %body
    = render partial: "shares/social_requirements"
    #flash-notice
      = render partial: "shares/flash_notice"

    .container.anonymous_container
      = render partial: "/shares/landing_header"
      .app-content
        .row.topic-page
          .span2
            = render :partial => "/shares/shared_sidebar"
          .span10.pull-right
            = render :partial => "/shares/anonymous_topic_header"
            = yield
          .clear
        .clear
      = render partial: "/shares/footer"
