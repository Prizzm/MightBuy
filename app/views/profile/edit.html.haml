%div#details.edit-page
  = simple_form_for resource, :url => resource_path do |form|
    = render "form", :form => form
    
    .mtop25
    
    .profile-actions
      .span2.buttons.btn-red-l
        = form.button :submit, "Save Changes!"
      .span4.mtop10.mleft40
        = link_to 'Delete Account', user_registration_path, :confirm => 'Are you sure you want to delete your account? All data will be lost.', :method => :delete
      .clear
  .clear