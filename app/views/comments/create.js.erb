<%- if current_user -%>
  $(".topic-comments").append("<%= escape_javascript(render partial: 'topics/comment_entry', locals: { comment: @comment }) -%>");
  $("#comment_description").val("");

  $(".flash-notice").remove();
  $("body").prepend("<%= escape_javascript(render partial: 'shares/flash_notice') -%>");
<% else -%>
  $(document).bind('reveal.facebox', function() {
    Mightbuy.socialShare.bindFacebookSignin( $(".facebook-icon") );
  });
  $.facebox("<%= escape_javascript(render partial: 'shares/login_lightbox', locals: {user: User.new}) -%>");
<% end -%>
