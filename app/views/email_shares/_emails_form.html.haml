.row.mtop20
  .span10
    = simple_form_for topic, url: topic_email_shares_path(topic), method: :post, remote: remote do |f|
      .share-view
        = heading "Share Via Email.."
        %ul.nav.nav-tabs
          %li.active= link_to "Enter them yourself.."

        #email-share-fields
          = f.simple_fields_for :email_shares, include_id: false do |email_share_form|
            - if email_share_form.object.id.nil?
              .row.add-email-entry
                .span3
                  = email_share_form.input :with, label: false
                .span2
                  = link_to "javascript:void(0);", class: "remove-email" do
                    %i.icon-remove
        = f.submit "Send Emails", class: "btn btn-red btn-large"
