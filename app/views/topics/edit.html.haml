= javascript_tag "Mightbuy.initialTags = #{@topic.tag_array}"
%div#details
  .row
    .span5
      .topic-form-wrapper
        = simple_form_for @topic do |form|
          = render "/topics/forms/default", :form => form
          .buttons.btn-red-large.w115
            = form.button :submit, "Save"
    %div#topic_right_panel.span5
      %div#gsearch-results{style: "display:none;"}
      %div#item-form-image-selector
    .clear
:javascript
  $(function() {
    $('textarea').autogrow();
  });