.show-topic
  .row.ptop30
    .span6.topic-poster-prompt
      #{@topic.poster_name} Mightbuy:
    .span3.may-buy.pull-right
      = link_to("I may buy as well",copy_topic_path(@topic), class: "btn-red")

  .row.mtop50
    = render :partial => "topic_detail"

  .row
    .span5
      \&nbsp;
    .span5{class: current_user ? "" : "offset4"}
      #topic-voting.pleft40
        = render partial: "topics/topic_votes", locals: { topic: @topic, vote: @vote }

  .row
    .topic-votes-and-deals
      %hr
      #topic-percentage-row
        - unless @topic.votes.empty?
          = render :partial => "vote_percentage", locals: {topic: @topic}
      - if @topic.has_bargin?
        = render :partial => "deals", locals: {topic: @topic}
      .clear

  .row
    .span6
      %h3.mleft40.mtop20.mbot30 Write Responses

  .topic-comments
    - @comments.each do |comment|
      = render partial: "topics/comment_entry", locals: { comment: comment }

  .row
    .new-topic-comment.mleft40
      .span1= image_tag(avatar_image)
      .span8.mbot30
        = simple_form_for [@topic, @comment], remote: true do |f|
          = f.input :description, label: false, input_html: { rows: 3 }
          .new-comment-form-submit
            = f.submit ""

