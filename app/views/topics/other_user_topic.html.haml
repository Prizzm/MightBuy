.show-topic
  .row.ptop60
    .span6.topic-poster-prompt
      #{@topic.poster_name} #{@topic.human_status}:
    .span3.may-buy.pull-right
      .btn-group
        %a{:href => copy_topic_path(@topic), :class => "btn btn-large btn-danger"} I may buy
        %button.btn.btn-large.btn-danger.dropdown-toggle{"data-toggle" => "dropdown"}
          %span.caret
        %ul.dropdown-menu
          %li
            %a{:href => copy_have_path(id: @topic.shortcode)} I have it

  .row.mtop50
    = render :partial => "topic_detail"

  .row
    .span5
      \&nbsp;
    .span5{class: current_user ? "" : "offset4"}
      #topic-voting.pleft40
        = render partial: "topics/topic_votes", locals: { topic: @topic, vote: @vote }

  = render :partial => "topic_meta_information"
