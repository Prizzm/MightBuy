.show-topic.prel
  .row.topic-links.ptop30
    = render :partial => "topic_detail"

  .row.mtop20
    .span10
      = simple_form_for @topic do |form|
        .share-view
          = heading "Share Via.."
          = render "share_with_customers", :form => form
          .buttons.btn-red-l
            = form.button :submit, "Send emails"