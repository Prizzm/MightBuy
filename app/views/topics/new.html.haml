%div#details
  .row
    .span5
      .topic-form-wrapper.rich-texteditor
        = simple_form_for @topic do |form|
          = render "/topics/forms/default", :form => form
          .buttons.btn-red-big
            = form.button :submit, "Save"
    %div#topic_right_panel.span5
      %div#gsearch-results.hide
      %div#item-form-image-selector
    .clear
%script{:src => "http://js.nicedit.com/nicEdit-latest.js", :type => "text/javascript"}
:javascript
  bkLib.onDomLoaded(function() {
        new nicEditor({buttonList : ['fontSize','bold','italic','underline','strikethrough','subscript','superscript','superscript','ol','ul','right','removeformat','hr']}).panelInstance('topic_body');
  });

  $(function() {
    $('textarea').autogrow();
  });
