- content_for :head do
  = javascript_tag "var POINTS_ENABLED = %s" % (cookies[:disable_points].to_s != 'true')

#app.recommendation-response

  #flashes
    - flash.each do |key, message|
      - if key == :points
        = points_flash(message)

  #frame
